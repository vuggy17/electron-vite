{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "#preload": [
        "../preload/src/index"
      ],
      "/@/*": [
        "./src/*"
      ],
      "#internal": [
        "../internal/src",
        "../internal/src/ports/*.ts"
      ],
      "#shared/*": [
        "../../shared/*",
      ],
    },
    "lib": [
      "ESNext",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts",
    "../../shared/**/*.d.ts",
    "../internal/src/ports/index.ts",
    "../internal/src/*.ts",
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
