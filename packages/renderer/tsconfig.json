{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "/@/*": [
        "./src/*"
      ],
      "#shared/*": [
        "../shared/*",
      ],
      "#internal/*": [
        "../internal/src/*",
      ],
      "#preload": [
        "../preload/src/index"
      ],
    },
    "lib": [
      "ESNext",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../types/**/*.d.ts",
    "../shared/**/*.ts",
    "../internal/**/*.ts",
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
