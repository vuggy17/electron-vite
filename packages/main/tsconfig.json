{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": [
      "node",
    ],
    "baseUrl": ".",
    "paths": {
      "/@/*": [
        "./src/*"
      ],
      "#shared/*": [
        "../shared/*"
      ],
      "#preload": [
        "../preload/src/index"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "../../types/**/*.d.ts",
    "../shared/**/*.ts",
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
