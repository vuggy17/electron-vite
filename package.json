{
  "name": "window-text-extraction",
  "description": "Secure boilerplate for Electron app based on Vite",
  "version": "1.0.0",
  "private": true,
  "author": {
    "email": "vuggy17@gmail.com",
    "name": "Duy Vu",
    "url": "https://github.com/vuggy17"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "vite build --config ./packages/renderer/vite.config.js",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "test": "npm run test:main && npm run test:preload && npm run test:renderer && npm run test:e2e",
    "test:e2e": "npm run build && vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "watch": "node scripts/watch.mjs",
    "lint": "eslint . --ext js,mjs,cjs,ts,mts,cts,tsx",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck:internal": "tsc --noEmit -p packages/internal/tsconfig.json",
    "typecheck": "npm run typecheck:internal && npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.mjs && electron-builder install-app-deps && electron-rebuild -m .",
    "cleanup": "node scripts/cleanup-build-artifacts.mjs",
    "format": "npx prettier --write \"**/*.{js,mjs,cjs,ts,mts,cts,tsx,json}\""
  },
  "devDependencies": {
    "@types/node": "18.15.3",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "5.55.0",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.14",
    "cross-env": "7.0.3",
    "electron": "23.1.4",
    "electron-builder": "23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "8.36.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vue": "9.9.0",
    "happy-dom": "8.9.0",
    "nano-staged": "0.8.0",
    "playwright": "1.31.2",
    "postcss": "^8.4.21",
    "react-error-boundary": "^4.0.2",
    "simple-git-hooks": "2.8.1",
    "tailwindcss": "^3.3.1",
    "typescript": "~4.9.5",
    "unplugin-auto-expose": "0.0.4",
    "vite": "^4.2.1",
    "vitest": "0.29.3"
  },
  "dependencies": {
    "@abraham/reflection": "^0.12.0",
    "@ant-design/icons": "^5.0.1",
    "@electron/rebuild": "^3.2.10",
    "antd": "^5.3.3",
    "beautiful-react-hooks": "^4.3.0",
    "electron-updater": "5.3.0",
    "nodert-streams": "file:packages/externals/nodert.streams",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.10.0",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.7.0",
    "windows.globalization": "file:packages/externals/windows.globalization",
    "windows.graphics.imaging": "file:packages/externals/windows.graphics.imaging",
    "windows.media.ocr": "file:packages/externals/windows.media.ocr",
    "windows.storage.streams": "file:packages/externals/windows.storage.streams",
    "winston": "^3.8.2"
  },
  "engines": {
    "node": ">=18.15.0",
    "npm": ">=9.5.0",
    "pnpm": ">=7.30.5"
  }
}
